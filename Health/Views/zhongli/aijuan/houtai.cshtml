@{
    ViewBag.Title = "houtai";
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>专家登录</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <script src="~/UI/jquery.min.js" type="text/javascript"></script>
    <script src="~/UI/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="~/UI/locale/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <link href="~/UI/themes/gray/easyui.css" rel="stylesheet" />
    <link href="~/UI/themes/icon.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/templatemo_main.css" rel="stylesheet" />
    <script src="../js/templatemo_script.js" type="text/javascript"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/Chart.min.js"></script>

 <script type="text/javascript">
     $(function () {
         yes();
     })
     function yes() {
         $('#tab').datagrid({
             fitColumns: true,
             singleSelect: true,
             url: '/aijuan/getlist1?tname=' + $("#xx").val() + '&na=' + $("#cc").val(),
             pagination: true,
             pageSize: 10,
             pageList: [5, 10, 15],
             columns: [[
                 { field: 'uid', title: '编号', width: 100, height: 10, align: 'center' },
                 { field: 'uname', title: '患者姓名', width: 100, align: 'center' },
                 { field: 'uphone', title: '联系号码', width: 100, align: 'center' },
                 { field: 'dname', title: '预约医生', width: 100, align: 'center' },
                 {
                     field: 'otname', title: '预约状态', width: 100, align: 'center',
                     styler: function (value, row, index) {
                         if (row.otname == "待审核") {
                             return 'color:red';
                         }
                         else {
                             return value;
                         }
                     }
                 },
                 { field: 'tiname', title: '预约时段', width: 100, align: 'center' },
                 { field: 'shu', title: '总预约数', width: 100, align: 'center' },
             { field: 'syyy', title: '剩余预约', width: 100, align: 'center' }
             ]],
         });
     };
    </script>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <div class="logo">
                <a href="#">
                    <h1>Dental Health</h1>
                </a>
            </div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
    </div>
    <div class="template-page-wrapper">
        <div class="navbar-collapse collapse templatemo-sidebar">
            <ul class="templatemo-sidebar-menu">
                <li>
                    <form class="navbar-form">
                        <input type="text" class="form-control" id="templatemo_search_box" placeholder="Search..." />
                        <span class="btn btn-default">Go</span>
                    </form>
                </li>
                <li class="active"><a href="~/aijuan/houtai"><i class="fa fa-home"></i>预约列表</a></li>
                <li><a href="~/aijuan/check"><i class="fa fa-cubes"></i><span class="badge pull-right">9</span>审核</a></li>
                <li><a href="~/aijuan/talk"><i class="fa fa-users"></i><span class="badge pull-right">NEW</span>回复留言</a></li>
                <li><a href="~/aijuan/docInFo"><i class="fa fa-cog"></i>设置信息</a></li>
                <li><a href="javascript:;" data-toggle="modal" data-target="#confirmModal"><i class="fa fa-sign-out"></i>退出</a></li>
            </ul>
        </div>

        <div class="templatemo-content-wrapper">
            <div class="templatemo-content">
                <ol class="breadcrumb">
                    <li><a href="~/aijuan/houtai">后台</a></li>
                    <li><a href="#">专家</a></li>
                    <li class="active">预约列表</li>
                    <li style="float: right">@DateTime.Now</li>
                    <li style="float: right">欢迎你：@Session["dname"]</li>
                    
                </ol>
                @* //查询*@

                预约状态： @Html.DropDownList("xx", string.Empty)  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
                预约时间：@Html.DropDownList("cc", string.Empty)
                <input type="button" id="yes" onclick="yes()" value="查找" class="btn btn-default" />
                <br />
                <br />
                <!-- //数据表单开始-->
                <div class="table-responsive">
                    <div class="row">
                        <table id="tab">
                        </table>
                    </div>
                </div>
                <!--  //tab结束-->
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">关闭</span></button>
                        <h4 class="modal-title" id="myModalLabel">确定退出吗?</h4>
                    </div>
                    <div class="modal-footer">
                        <a href="~/zhongli/login" class="btn btn-primary">是</a>
                        <button type="button" class="btn btn-default" data-dismiss="modal">否</button>
                    </div>
                </div>
            </div>
        </div>
        <footer class="templatemo-footer">
            <div class="templatemo-copyright">
                <p>Copyright &copy; 2016 武汉船舶职业技术学院 <a href="#">无需等待，马上行动！</a> - Dental Health <a href="#">口腔健康之家</a></p>
            </div>
        </footer>
    </div>
</body>
</html>

