    Layout = null;
    }
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>审核</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <script src="../../UI/jquery.min.js" type="text/javascript"></script>
    <script src="../../UI/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="../../UI/locale/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <link href="../../UI/themes/gray/easyui.css" rel="stylesheet" />
    <link href="../../UI/themes/icon.css" rel="stylesheet" />

    <link href="../css/bootstrap.min.css" rel="stylesheet" />
    <link href="../css/font-awesome.min.css" rel="stylesheet" />
    <link href="../css/templatemo_main.css" rel="stylesheet" />
    <script src="../js/templatemo_script.js" type="text/javascript"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/Chart.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#tn').datagrid({
                fitColumns: true,
                singleSelect: true,
                url: '/aijuan/getlist1',
                pagination: true,
                pageSize: 10,
                pageList: [5, 10, 15],
                columns: [[
                    { field: 'uid', title: '编号', width: 100, height: 10, align: 'center' },
                    { field: 'uname', title: '患者姓名', width: 100, align: 'center' },
                    { field: 'uphone', title: '联系号码', width: 100, align: 'center' },
                    { field: 'dname', title: '预约医生', width: 100, align: 'center' },
                    {
                        field: 'otname', title: '预约状态', width: 100, align: 'center', styler: function (value, row, index) {
                            if (value == "待审核") {
                                return 'color:red;';
                            }
                            else {
                                return value;
                            }
                        }
                    },
                    { field: 'tiname', title: '预约时段', width: 100, align: 'center' },
                    { field: 'shu', title: '总预约数', width: 100, align: 'center' },
                { field: 'syyy', title: '剩余预约', width: 100, align: 'center' }
                ]],
                toolbar: [{
                    
                    iconCls: "icon-edit",
                    text: "审核",
                    handler: function () {
                        var a = $("#tn").datagrid("getSelected");
                        $("#ee").dialog({
                            href: "/aijuan/check2?ttid=" + a.oid,
                            title:"审核",
                            width: "400",
                            height: "420",
                            buttons: [{
                                text: "保存",
                                handler: function () {
                                    $("#checkform").form("submit", {
                                        url: "/aijuan/check3",
                                        success: function (data) {
                                            if(data=="ok")
                                            {
                                                $("#ee").dialog("close");
                                                $.messager.alert("提示", "审核成功！");
                                                $.messager.defaults={ok:"确认",cancel:"取消"}
                                                $("#tn").datagrid("reload");
                                                
                                            }
                                            
                                        }
                                    })
                                }
                            }]
                        })
                    }
                }
                ]
            });

        });
    </script>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <div class="logo">
                <a href="#">
                    <h1>Dental Health</h1>
                </a>
            </div>
