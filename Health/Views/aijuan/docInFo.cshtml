    ViewBag.Title = "docInFo";
    Layout = null;
}
<html>
<head>
    <title>医生信息</title>
    <script src="~/UI/jquery.min.js"></script>
    <script src="~/UI/jquery.easyui.min.js"></script>
    <script src="~/UI/locale/easyui-lang-zh_CN.js"></script>
    <link href="~/UI/themes/icon.css" rel="stylesheet" />
    <link href="~/UI/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/templatemo_main.css" rel="stylesheet" />
    <script src="../js/templatemo_script.js" type="text/javascript"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/Chart.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#dg').datagrid({
                url: '/aijuan/docInFo',
                columns: [[
                    { field: 'ck', checkbox: true },
                    { field: 'did', title: '医生编号', width: 100, align: 'center' },
                    { field: 'dname', title: '医生姓名', width: 100, align: 'center' },
                    { field: 'dpwd', title: '登陆密码', width: 100, align: 'center' },
                    { field: 'dzhicheng', title: '医生职称', width: 100, align: 'center' },
                    { field: 'daddress', title: '地址', width: 100, align: 'center' },
                    { field: 'djianjie', title: '简介', width: 100, align: 'center' },
                    { field: 'dxiangqing', title: '医生详情', width: 100, align: 'center' },
                    { field: 'dsex', title: '性别', width: 100, align: 'center' },
                    { field: 'shu', title: '剩余预约人数', width: 100, align: 'center' },
                ]],
                toolbar: [
            {
                text: '修改',
                iconCls: 'icon-edit',
                handler: function () {

                    var item = $("#dg").datagrid("getChecked");
                    var id = item[0].did;
                    alert(id);
                    $("#a").dialog({

                        title: '修改信息',
                        iconCls: 'icon-edit',
                        href: '/aijuan/docedit?did=' + did,
                        width: 300,
                        height: 400,
                        buttons: [{
                            text: '保存',
                            iconCls: 'icon-save',
                            handler: function () {
                                $("#form1").form("submit", {
                                    url: "/aijuan/InfoList",
                                    success: function () {
                                        $("#a").window("close");
                                        $.messager.alert("提示", "修改成功");
                                        $("#dg").datagrid("reload");
                                    }
                                })
                            }
                        }, ]


                    })
                }
            }]

            });
        });
    </script>
</head>
<body>
